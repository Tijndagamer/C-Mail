<Window x:Class="C_Mail_2._0.EmailIsSentPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C-Mail - Email has been sent" Height="98" Width="241" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="The email has been sent!" Style="{StaticResource DialogLabelStyle}" Grid.Row="0"
               HorizontalAlignment="Center"/>
        <Button x:Name="CloseButton" Content="Close" Style="{StaticResource DialogButtonStyle}"
                Click="CloseButton_Click" TabIndex="1" 
                ToolTip="Click here to close this window." IsDefault="True"
                Grid.Row="1"/>
    </Grid>
</Window>
