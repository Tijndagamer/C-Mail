<Window x:Name="ErrorPopupMain" x:Class="C_Mail_2._0.ErrorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C-Mail - ERROR!" Height="102.985" Width="226.866">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="ErrorLabel" Content="Oh no! An Error occured!" 
               Style="{StaticResource DialogLabelStyle}" 
               VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" IsDefault="True"
                Style="{StaticResource DialogButtonStyle}"
                Grid.Row="1"/>
    </Grid>
</Window>
