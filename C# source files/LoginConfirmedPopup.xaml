<Window x:Class="C_Mail_2._0.LoginConfirmedPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C-Mail - Login" Height="101" Width="193" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="LoggedInConfirmedTextLabel" Content="Logged in!" Grid.Row="0" 
               Style="{StaticResource DialogLabelStyle}" VerticalAlignment="Center"/>
        <Button x:Name="CloseButton" Content="Close"
                Click="CloseButton_Click" IsDefault="True"
                Grid.Row="1" Style="{StaticResource DialogButtonStyle}"/>
    </Grid>
</Window>
